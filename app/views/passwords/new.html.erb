<div class="row">
  <div class="col-sm-8 offset-2">
    <h1>Forgot your password?</h1>
    <%= form_with url: passwords_path do |form| %>
      <%= form.email_field :email_address, required: true, autofocus: true, 
                           autocomplete: "username", placeholder: "Enter your email address", 
                           value: params[:email] %><br>
      <%= form.submit "Email reset instructions", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>