<% provide(:title, "Sign in") %>

<div class="container pageContent">
  <!--%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %-->
  <!--%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %-->
  <h1 class="pageHeader">Sign in</h1>
  <%= form_with url: session_path do |f| %>
    <div class="form-group">
      <%= f.email_field :email_address, class: 'form-control col-sm-4', 
                  id: 'signin_email', required: true, autofocus: true, 
                  autocomplete: "username", placeholder: "Email Address", 
                  value: params[:email_address] %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: 'form-control col-sm-4', id: 'signin_password', 
              required: true, autocomplete: "current-password", 
              placeholder: "Enter your password", maxlength: 72 %><br>
    </div>

    <div><%= f.submit "Sign in", class: "btn btn-primary", id: 'signin_button' %></div>
  <% end %>
<%= link_to "Forgot password?", new_password_path %>
<%= link_to "Sign up?", new_registrations_path %>

